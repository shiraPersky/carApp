generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Service {
  id                 Int      @id @default(autoincrement())
  car_id             Int
  service_type       String
  date               DateTime
  time               String
  odometer           Int
  place              String
  driver             String
  paymentMethod      String
  file_attachment    String?
  cost               Float
  notes              String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model Refueling {
  id             Int      @id @default(autoincrement())
  date           DateTime
  time           String
  odometer       Int
  kindOfFuel     String
  pricePerLiter  Float
  totalCost      Float
  liters         Float
  gasStation     String
  driver         String
  fileAttachment String?
  notes          String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Car {
  id            Int      @id @default(autoincrement()) // Unique identifier for the car
  make          String   // Car brand (e.g., Toyota)
  model         String   // Car model (e.g., Corolla)
  year          Int      // Year of manufacture
  license_plate String   @unique // License plate number
  color         String   // Color of the car
  odometer      Int      // Odometer reading (mileage)
  car_type      String   // Type of the car (Sedan, SUV, etc.)
  fuel_type     String   // Fuel type (Petrol, Diesel, Electric)
  engine_number String?  // Engine number (optional)
  created_at    DateTime @default(now()) // Timestamp when car was added
  updated_at    DateTime @updatedAt // Timestamp for last update
}

