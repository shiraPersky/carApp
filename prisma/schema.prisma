generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Service {
  id                 Int      @id @default(autoincrement())
  car_id             Int
  service_type       String
  date               DateTime
  time               String
  odometer           Int
  place              String
  driver             String
  paymentMethod      String
  file_attachment    String?
  cost               Float
  notes              String?
  reminderKilometers Int?
  reminderMonths     Int?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model Refueling {
  id             Int      @id @default(autoincrement())
  date           DateTime
  time           String
  odometer       Int
  kindOfFuel     String
  pricePerLiter  Float
  totalCost      Float
  liters         Float
  gasStation     String
  driver         String
  fileAttachment String?
  notes          String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
